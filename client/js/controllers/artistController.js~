angular
  .module('app')
    .controller('ArtistController', ArtistController);

function ArtistController(Artist) {
        let ctrl = this;
        var artists;
        var keywords;

	ctrl.search = (keywords) => {
            const params = { keywords };
            ctrl.artists = Artist.searchArtistByName(params);
	}
};

ArtistController.$inject = ['Artist'];
